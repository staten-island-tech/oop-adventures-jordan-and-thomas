import json
import os
class Pokemon():
    def __init__ (self, name, types, moves, attack, defense, specialattack, specialdefense, health, speed):
        self.name = name
        self.types = types
        self.moves = moves
        self.attack = attack
        self.defense = defense
        specialattack = specialattack
        self.specialdefense = specialdefense
        self.health = health
        self.speed = speed
name = input("Input Pokemon name here ")
typescombined = input("Input Pokemon's types here ")
types = typescombined.split(",")
movescombined = input("Input Pokemon's learnable moves here ")
moves = movescombined.split(",")
with open("data.json", "r") as f:
    data = json.load(f) # append to data!!!
    print({"Name":name, "Types":types, "Learnable Moves":moves})
    data.append({"Name":name, "Types":types, "Learnable Moves":moves})
new_file = "updated.json"
with open(new_file, "w") as f:
    json_string = json.dumps(data, indent=4)
    f.write(json_string)
os.remove("data.json")
os.rename(new_file, "data.json")